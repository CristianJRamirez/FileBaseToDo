<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryDark">@color/amarillo</item>
        <item name="colorAccent">@color/naranja</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    style name="AppTheme" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/azulClaro</item>
        <item name="colorPrimary">@color/azulOscuro</item>
        <item name="colorAccent">@color/verdePalido</item>

        <item name="android:windowBackground">@color/granate</item>
    </style>

</resources>
